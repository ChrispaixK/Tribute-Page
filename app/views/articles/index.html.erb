<h1>Article home page</h1>
<table>
  <thead>
    <tr>
      <th><strong>Title</strong></th>
      <th><strong>Description</strong></th>
      <th><strong>Actions</strong></th>
      <th><strong>Author</strong></th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article) %> <%= button_to 'Delete', article_path(article), method: :delete %></td>
      <td>Written by <%= article.user.name %></td>
    </tr>
  </tbody>

  <% end %>
</table>
<%= link_to 'New Article', new_article_path %>